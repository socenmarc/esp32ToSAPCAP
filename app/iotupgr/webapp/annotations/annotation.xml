<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/Common.xml">
        <edmx:Include Namespace="com.sap.vocabularies.Common.v1" Alias="Common"/>
    </edmx:Reference>
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/UI.xml">
        <edmx:Include Namespace="com.sap.vocabularies.UI.v1" Alias="UI"/>
    </edmx:Reference>
    <edmx:Reference Uri="https://sap.github.io/odata-vocabularies/vocabularies/Communication.xml">
        <edmx:Include Namespace="com.sap.vocabularies.Communication.v1" Alias="Communication"/>
    </edmx:Reference>
    <edmx:Reference Uri="/v2/iot/$metadata">
        <edmx:Include Namespace="IOTService"/>
    </edmx:Reference>
    <edmx:DataServices>
        <Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="local">
            <Annotations Target="IOTService.MeasureView">
                <Annotation Term="UI.Chart">
                    <Record Type="UI.ChartDefinitionType">
                        <PropertyValue Property="Title" String="Measures"/>
                        <PropertyValue Property="Description" String="Measures"/>
                        <PropertyValue Property="ChartType" EnumMember="UI.ChartType/Column"/>
                        <PropertyValue Property="Dimensions">
                            <Collection>
                                <PropertyPath>measureMonthID</PropertyPath>
                            </Collection>                            
                        </PropertyValue>                        
                        <PropertyValue Property="Measures">
                            <Collection>
                                <PropertyPath>temperature</PropertyPath>
                                <PropertyPath>humidity</PropertyPath>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
                <Annotation Term="UI.PresentationVariant">
                    <Record Type="UI.PresentationVariantType">
                        <PropertyValue Property="Text" String="Default"/>
                        <PropertyValue Property="SortOrder">
                            <Collection>
                                <Record Type="Common.SortOrderType">
                                    <PropertyValue Property="Property" PropertyPath="timestamp"/>
                                    <PropertyValue Property="Descending" Bool="true"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                        <PropertyValue Property="IncludeGrandTotal" Bool="false"/>
                        <PropertyValue Property="InitialExpansionLevel" Int="1"/>
                        <PropertyValue Property="Visualizations">
                            <Collection>
                                <AnnotationPath>@UI.LineItem</AnnotationPath>
                                <AnnotationPath>@UI.Chart</AnnotationPath>
                            </Collection>
                        </PropertyValue>
                    </Record>                   
                </Annotation>
            </Annotations>
            <Annotations Target="IOTService.DeviceAggregation">
                <Annotation Term="UI.Chart" Qualifier="DeviceAggregation">
                    <Record Type="UI.ChartDefinitionType">
                        <PropertyValue Property="Title" String="Devices and measures"/>
                        <PropertyValue Property="Description" String="Devices and measures"/>
                        <PropertyValue Property="ChartType" EnumMember="UI.ChartType/Donut"/>
                        <PropertyValue Property="Dimensions">
                            <Collection>
                                <PropertyPath>deviceID</PropertyPath>
                            </Collection>
                        </PropertyValue>
                        <PropertyValue Property="Measures">
                            <Collection>
                                <PropertyPath>measuresCount</PropertyPath>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
                <Annotation Term="UI.PresentationVariant" Qualifier="DeviceAggregation">
                    <Record Type="UI.PresentationVariantType">
                        <PropertyValue Property="Visualizations">
                            <Collection>
                                <AnnotationPath>@UI.Chart#DeviceAggregation</AnnotationPath>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>
            <Annotations Target="IOTService.MeasureAggregation">
                <Annotation Term="UI.Chart" Qualifier="FilterAveragesByDate">
                    <Record Type="UI.ChartDefinitionType">
                        <PropertyValue Property="Title" String="Averages by date"/>
                        <PropertyValue Property="Description" String="Averages by date"/>
                        <PropertyValue Property="ChartType" EnumMember="UI.ChartType/Line"/>
                        <PropertyValue Property="Dimensions">
                            <Collection>
                                <PropertyPath>date</PropertyPath>
                            </Collection>
                        </PropertyValue>
                        <PropertyValue Property="Measures">
                            <Collection>
                                <PropertyPath>measuresCount</PropertyPath>
                            </Collection>
                        </PropertyValue>                        
                    </Record>
                </Annotation>
                <Annotation Term="UI.PresentationVariant" Qualifier="FilterAveragesByDate">
                    <Record Type="UI.PresentationVariantType">
                        <PropertyValue Property="Visualizations">
                            <Collection>
                                <AnnotationPath>@UI.Chart#FilterAveragesByDate</AnnotationPath>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>
            <Annotations Target="IOTService.MeasureView/deviceID">
                <Annotation Term="Common.ValueList">
                    <Record Type="Common.ValueListType">
                        <PropertyValue Property="CollectionPath" String="DeviceAggregation"/>
                        <PropertyValue Property="PresentationVariantQualifier" String="DeviceAggregation"/>
                        <PropertyValue Property="Parameters">
                            <Collection>
                                <Record Type="Common.ValueListParameterInOut">
                                    <PropertyValue Property="LocalDataProperty" PropertyPath="deviceID"/>
                                    <PropertyValue Property="ValueListProperty" String="deviceID"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>
            <Annotations Target="IOTService.MeasureView/date">
                <Annotation Term="Common.ValueList">
                    <Record Type="Common.ValueListType">
                        <PropertyValue Property="CollectionPath" String="MeasureAggregation"/>
                        <PropertyValue Property="PresentationVariantQualifier" String="FilterAveragesByDate"/>
                        <PropertyValue Property="Parameters">
                            <Collection>
                                <Record Type="Common.ValueListParameterInOut">
                                    <PropertyValue Property="LocalDataProperty" PropertyPath="date"/>
                                    <PropertyValue Property="ValueListProperty" String="date"/>
                                </Record>
                            </Collection>
                        </PropertyValue>
                    </Record>
                </Annotation>
            </Annotations>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>